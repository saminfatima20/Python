
def add_task(task):
    to_do_list.append({"task": task, "completed": False})
    print(f"Task '{task}' added.")

def view_tasks():
    if not to_do_list:
        print("No tasks in the list.")
        return
    print("Your To-Do List:")
    for i, item in enumerate(to_do_list):
        status = "âœ“" if item["completed"] else " "
        print(f"{i+1}. [{status}] {item['task']}")

def mark_completed(task_number):
    if 1 <= task_number <= len(to_do_list):
        to_do_list[task_number - 1]["completed"] = True
        print(f"Task {task_number} marked as completed.")
    else:
        print("Invalid task number.")

while True:
    print("\n--- To-Do List Menu ---")
    print("1. Add Task")
    print("2. View Tasks")
    print("3. Mark Task as Completed")
    print("4. Exit")

    choice = input("Enter your choice: ")

    if choice == '1':
        task = input("Enter the task: ")
        add_task(task)
    elif choice == '2':
        view_tasks()
    elif choice == '3':
        task_num = int(input("Enter the task number to mark as completed: "))
        mark_completed(task_num)
    elif choice == '4':
        print("Exiting To-Do List. Goodbye!")
        break
    else:
        print("Invalid choice. Please try again.")